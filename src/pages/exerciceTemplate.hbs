<!-- Template d'exécution effective de l'exercice 
    exerciceTemplate.hbs
 -->

<div class="w3-container">

  <div class="w3-card-4">
    <div class="w3-container w3-padding analogue">
      <h3>{{titre}} d'exercice pour {{app_name}}</h3>
    </div>
  </div>

<p>Ici, les champs du formulaire...</p>
<ul>
  {{#each champs}}
  <li>{{this.description}} : 
    {{#if (typeFormulaireTexte this.type)}}
    <input name="{{this.name}}" type="{{this.type}}" />
    {{/if}}
  </li>
  {{/each}}
</ul>

</div>